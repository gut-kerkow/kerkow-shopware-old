{% sw_extends '@Storefront/storefront/component/analytics.html.twig' %}

{% block component_head_analytics %}
    {{ parent() }}

    {% block shop_studio_google_tag_manager_cloud_component_head_analytics %}
        {% set shopStudioGoogleTagManagerCloudConfig = config('ShopStudioGoogleTagManagerCloud.config') %}
        {% if shopStudioGoogleTagManagerCloudConfig is not empty and shopStudioGoogleTagManagerCloudConfig.enableTracking and shopStudioGoogleTagManagerCloudConfig.containerId is not empty %}
            {% set options = {
                'containerId': shopStudioGoogleTagManagerCloudConfig.containerId,
                'debugEnabled': shopStudioGoogleTagManagerCloudConfig.debugEnabled,
                'context': {
                    'controllerName': controllerName|lower,
                    'controllerAction': controllerAction|lower,
                    'currency': {
                        'isoCode': context.currency.isoCode
                    }
                }
            } %}

            {% block shop_studio_google_tag_manager_cloud_component_head_analytics_tag_config %}
                <script>
                    window.shopStudioGoogleTagManagerCloudGtagCallback = function shopStudioGoogleTagManagerCloudGtagCallbackFunction() {
                        (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
                                new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
                            j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
                            'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
                        })(window,document,'script','dataLayer', '{{ shopStudioGoogleTagManagerCloudConfig.containerId }}');
                    }
                </script>
            {% endblock %}

            <template data-shop-studio-google-tag-manager-cloud="true" data-shop-studio-google-tag-manager-cloud-options="{{ options|json_encode }}"></template>
        {% endif %}
    {% endblock %}
{% endblock %}
